/* pages/my-posts/my-posts.wxss */
.container {
  padding: 32rpx;
  background-color: #f5f7fa;
}

.section-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 32rpx;
  color: #333;
  position: relative;
  padding-left: 16rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 8rpx;
  height: 32rpx;
  width: 6rpx;
  background-color: #07c160;
  border-radius: 3rpx;
}

.post-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.post-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.post-item:active {
  transform: scale(0.98);
}

.post-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.post-status {
  font-weight: bold;
  font-size: 28rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.post-status.pending {
  color: #fff;
  background-color: #ff9900;
}

.post-status.taken {
  color: #fff;
  background-color: #07c160;
}

.post-time {
  color: #999;
  font-size: 24rpx;
}

.post-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.post-location {
  font-size: 30rpx;
  color: #333;
}

.post-reward {
  color: #ff9900;
  font-size: 28rpx;
  font-weight: bold;
}

.cancel-btn {
  background: #fff;
  border: 2rpx solid #ff4d4f;
  color: #ff4d4f;
  font-size: 28rpx;
  height: 72rpx;
  line-height: 72rpx;
  margin-top: 16rpx;
  border-radius: 36rpx;
  transition: all 0.3s ease;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cancel-btn:active {
  background-color: #ff4d4f;
  color: #fff;
}