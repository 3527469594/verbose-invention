.container {
  padding: 20px;
}

.form-section {
  background: #fff;
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.form-title {
  font-size: 16px;
  color: #333;
  margin-bottom: 10px;
}

.amount-input {
  border: 1px solid #eee;
  border-radius: 8px;
  padding: 12px 15px;
  font-size: 16px;
  margin-right: 10px;
  width: 60%;
}

.amount-input:focus {
  border-color: #07C160;
}

.unit {
  font-size: 16px;
  color: #666;
}

.submit-btn {
  background: #07C160;
  border-radius: 8px;
  font-size: 16px;
  margin-top: 20px;
}

.submit-btn:active {
  background: #06AD56;
}